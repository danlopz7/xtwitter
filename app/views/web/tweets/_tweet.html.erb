<div class="tweet">
  <div class="tweet-header">
    <strong><%= tweet.user.username %></strong> <span>@<%= tweet.user.username %></span>
  </div>
  <div class="tweet-content">
    <%= tweet.content %>  

      <div> <%= tweet.user.name %></div>

      <div class="text-muted"><small><%= tweet.created_at %></small></div>
      
  </div>
  <div class="tweet-footer">
    <div data-target="inline-edit.body" data-action="click->inline-edit#toggle"><%= tweet.body %></div>
    <span>Posted: <%= tweet.created_at.strftime('%Y-%m-%d %H:%M:%S') %></span>
    <%= link_to "Show", tweet %>
  </div>
 
</div>